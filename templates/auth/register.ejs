                    <!-- <label class="label"> Whatsapp Number: </label>         
<input type="text" name="name" size="15"/> <br> <br> -->
                    <!-- <input name="whatsapp" placeholder="whatsapp no." ><br>
        <input name="linkedin" placeholder="linkedin profile" ><br> -->
                    <label class="label"> Name: </label>
                    <input type="text" name="name" size="30" /> <br>
                    <label class="label"> ERPID: </label>
                    <input type="text" name="ERP_ID" size="30" /> <br>
                    <label class="label"> Password: </label>
                    <input type="password" name="password" size="30" /> <br>
                    <label class="label"> Confirm Password: </label>
                    <input type="password" name="conformpassword" size="30" /> <br>
                    <label class="label"> Number: </label>
                    <input type="text" name="contactNo" size="30" /> <br>
                    <label class="label"> Gender : </label>
                    <select>
                        <option value="gender">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <br> <br>
                    <input type="file" name="avatar" accept="image/*" multiple="false">
                    <br>
                    <label class="label"> Branch: </label>
                    <input type="text" name="name" size="30" /> <br>
                    <label class="label"> Year : </label>
                    <select>
                        <option value="number">Year</option>
                        <option value="number">1st</option>
                        <option value="number">2nd</option>
                        <option value="number">3rd</option>
                        <option value="number">4th</option>
                        <option value="number">5th</option>
                    </select>
                    <br>
                    <br>
                    <label class="label"> LinkedIN Profile: </label>
                    <input type="text" name="name" size="30" /> <br>

                    <button class="button">Register</button>
                </form>
            </div>
        </div>
    </div>
</body>
