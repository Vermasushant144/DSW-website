    .outer {
        
        max-width : 300px;
        background-color: #CC99FF;
        display: block;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        padding: 40px;
        max-height: fit-content;
        /* height: 60vh; */

        border-radius: 15px;
    }


    .inner {
        background-color: rgb(33, 62, 64);
        max-height: fit-content;
        {% comment %} height: 70vh; {% endcomment %}
        max-width: auto;
        padding: 80px;
        border-radius: 15px;
    }

    h1 {
        color: white;
        text-decoration: underline;
        margin-top: 2px;
    }

    button:hover {
        color: goldenrod;
        background-color: rgb(9, 9, 9);
        cursor: pointer;
        box-shadow: 2px 2px rgb(207, 194, 194);
    }

    .form_signup {

        display: block;
        margin: 0 auto;
        text-align: justify;
        padding: 8px;
    }

    .button {
        width: 150px;
        margin: 10px;
        text-align: center;
    }

    button:hover {
        color: goldenrod;
        background-color: rgb(9, 9, 9);
        cursor: pointer;
        box-shadow: 2px 2px rgb(207, 194, 194);
    }

    .label {
        color: aliceblue;
        text-align: center;

    }

    input {
        display: flex;
        {% comment %} max-width: 150px; {% endcomment %}
        align-items: center;
        border: 2px solid black;
        border-radius: 3px;
        width: 100%;
        padding: 5px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: none;
    }
</style>

<body>
    <div class="outer" id="response">
        <div class="inner">
            <h1>SIGN UP</h1>
            <div class="form_signup">
                <form action="/auth/register" method="POST" enctype="multipart/form-data" id="registerform">
                    <!-- <input name="name" placeholder="Name"><br> -->
                    <!-- <input name="ERP_ID" placeholder="ERP_ID"><br> -->
