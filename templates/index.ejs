<script>
  var sleeping = async()=>{
    await sleep(100);
  }
  var onLoad = async()=>{
    let localUser = await JSON.parse(localStorage.getItem("user"));
    
    if(localUser){
      if(localUser.access=='admin'){
        document.getElementById('admin').style.display = "block";
      }else if(localUser.access=='clubAdmin'){
        document.getElementById('clubAdmin').style.display = "block";
      }
      document.getElementById("profile").style.visibility = "visible";
      document.getElementById("auth").style.visibility = "hidden";
      document.getElementById("profile").innerHTML = localUser.name;
    }else{
      document.getElementById("profile").style.visibility = "hidden";
      document.getElementById("auth").style.visibility = "visible";
    }
    document.getElementById("clubAdmin").href = "http://localhost:3000/clubAdmin/"+localUser.id; 
  }
  var visitProfile = async()=>{
    let localUser = await JSON.parse(localStorage.getItem("user"));
    window.location.href = "http://localhost:3000/profile/"+localUser.ERP_ID;
  }
  
</script>
